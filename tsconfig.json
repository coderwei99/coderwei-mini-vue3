{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": [
      "es2016",
      "DOM"
    ],
    "paths": {
      "@coderwei-mini-vue3/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ]
}